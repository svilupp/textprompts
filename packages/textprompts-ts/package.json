{
  "name": "textprompts",
  "version": "0.2.0",
  "description": "TypeScript companion to textprompts for loading and formatting prompt files.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write --unsafe .",
    "lint:check": "biome lint .",
    "check": "npm run typecheck && npm run format:check && npm run lint:check && bun test",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "textprompts": "./dist/cli.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.0.7",
    "@types/node": "^20.11.30",
    "ai": "^4.0.0",
    "openai": "^4.73.0",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0"
  }
}
