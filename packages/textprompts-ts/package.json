{
  "name": "textprompts",
  "version": "0.1.0",
  "description": "TypeScript companion to textprompts for loading and formatting prompt files.",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write --unsafe .",
    "lint:check": "biome lint .",
    "check": "bun run typecheck && bun run format:check && bun run lint:check && bun test",
    "prepublishOnly": "bun run build"
  },
  "bin": {
    "textprompts": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.0.7",
    "@types/node": "^20.11.30",
    "ai": "^4.0.0",
    "openai": "^4.73.0",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0"
  }
}
